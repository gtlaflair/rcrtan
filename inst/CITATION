citHeader("To cite the 'rcrtan' package in publications, please use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("Version", meta$Version)

citEntry(entry="Manual",
         title = "rcrtan: Criterion-reference test analysis R functions",
         author = personList(as.person("Geoffrey T. LaFlair")),
         year = year,
         note = vers,
         url = "https://github.com/gtlaflair/rcrtan",
         textVersion =
         paste("LaFlair, G.T. (",year,"). rcrtan: Criterion-reference test analysis R functions (",vers,") [Software].", " Available from https://github.com/gtlaflair/rcrtan", ".", sep=""))
               

citEntry(entry="Book",
         title = "Criterion-referenced language testing",
         author = personList(as.person("James Dean Brown"),
                             as.person("Thom Hudson")),
	 publisher = "Cambridge University Press",
         address   = "Cambridge, England",
         year     = "2002",
         textVersion = paste("Brown, J.D., & Hudson, T. (1997).",
  	       "Criterion-referenced language testing.",
               "Cambridge University Press: Cambridge, England.")
)


